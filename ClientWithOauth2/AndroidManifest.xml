<?xml version="1.0" encoding="UTF-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.magnum.symptom.client"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="20" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/heart_beat"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="org.magnum.symptom.client.gen.activities.LoginScreenActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="org.magnum.symptom.client.gen.activities.PatientActivity"
            android:label="@string/title_activity_patient" />
        <activity
            android:name="org.magnum.symptom.client.gen.activities.CheckInActivity"
            android:label="@string/title_activity_check_in" />
        <activity
            android:name="org.magnum.symptom.client.gen.activities.ReminderActivity"
            android:label="@string/title_activity_reminder" />
        <activity
            android:name="org.magnum.symptom.client.gen.activities.DoctorActivity"
            android:label="@string/title_activity_doctor" >
        </activity>

        <receiver 
            android:name="org.magnum.symptom.client.gen.activities.CustomAlarmReceiver"
            android:enabled="true" >
            <intent-filter>
                <action android:name="org.magnum.symptom.client" >
                </action>
            </intent-filter>
        </receiver>

        <activity
            android:name="org.magnum.symptom.client.gen.activities.DoctorPatientsActivity"
            android:label="@string/title_activity_doctor_patients" >
        </activity>
        <activity
            android:name="org.magnum.symptom.client.gen.activities.MedicineActivity"
            android:label="@string/title_activity_medicine" >
        </activity>
    </application>

</manifest>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/light_blue"
    tools:context="${relativePackage}.${activityClass}" >

    <TextView
        android:id="@+id/checkAlarms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="@string/checkReminders" />

    <TimePicker
        android:id="@+id/timePicker1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkAlarms"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="58dp" />

    <Button
        android:id="@+id/setTimeButton1"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/setTimeButton3"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="34dp"
        android:text="@string/setTime1" />

    <Button
        android:id="@+id/setTimeButton3"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/setTimeButton4"
        android:layout_alignBottom="@+id/setTimeButton4"
        android:layout_alignLeft="@+id/setTimeButton1"
        android:text="@string/setTime3" />

    <Button
        android:id="@+id/setTimeButton4"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/setTimeButton2"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="47dp"
        android:text="@string/setTime4" />

    <Button
        android:id="@+id/setTimeButton2"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/setTimeButton4"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/setTimeButton1"
        android:text="@string/setTime2" />

</RelativeLayout>
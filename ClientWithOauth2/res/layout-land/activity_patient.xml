<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/light_blue"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.magnum.symptom.client.gen.activities.PatientActivity" >

    <TextView
        android:id="@+id/NameTxtV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/imageView1"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="66dp"
        android:layout_marginTop="100dp"
        android:text="@string/name"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/changePicButton"
        style="@style/AppTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView1"
        android:layout_below="@+id/imageView1"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="67dp"
        android:text="@string/changePic" />

    <TextView
        android:id="@+id/LastNameTxtV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/NameTxtV"
        android:layout_below="@+id/NameTxtV"
        android:text="@string/lastname"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/GenderTxtV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/LastNameTxtV"
        android:layout_below="@+id/LastNameTxtV"
        android:text="@string/gender"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/BirthdayTxtV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/GenderTxtV"
        android:layout_below="@+id/GenderTxtV"
        android:text="@string/birthday"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/MedicalRecordNameTxtV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/BirthdayTxtV"
        android:layout_below="@+id/BirthdayTxtV"
        android:text="@string/medicalRecord"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/recipeButton"
        style="@style/AppTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="31dp"
        android:text="@string/recipe"
        />

    <Button
        android:id="@+id/checkInButton"
        style="@style/AppTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/recipeButton"
        android:layout_centerHorizontal="true"
        android:text="@string/check_in" />

    <Button
        android:id="@+id/alarmsButton"
        style="@style/AppTheme"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_above="@+id/checkInButton"
        android:layout_centerHorizontal="true"
        android:text="@string/alarms" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="200dp"
        android:layout_height="400dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:src="@drawable/ic_launcher" />

</RelativeLayout>